{
    "version": "1.0",
    "description": "Skill activation triggers for mental-health-bar-rs project",
    "skills": {
        "rust-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Comprehensive Rust development guidelines",
            "promptTriggers": {
                "keywords": [
                    "rust",
                    "cargo",
                    "rustc",
                    "error handling",
                    "Option",
                    "Result",
                    "unwrap",
                    "expect",
                    "thiserror",
                    "anyhow",
                    "borrow checker",
                    "lifetime",
                    "trait",
                    "impl",
                    "file I/O",
                    "atomic write",
                    "tempfile",
                    "type safety",
                    "enum",
                    "pattern matching",
                    "performance",
                    "optimization",
                    "tracing",
                    "serde",
                    "tokio",
                    "async",
                    "mental health bar",
                    "status bar",
                    "CLI tool"
                ],
                "intentPatterns": [
                    "(write|create|add|implement|build|modify).*?rust",
                    "(fix|debug|handle|solve).*?(rust|error|borrow|lifetime)",
                    "(optimize|improve|performance).*?rust",
                    "(how to|best practice|idiom).*?rust",
                    "rust.*?(code|pattern|error|handling|performance)",
                    "(review|check).*?rust.*(PR|code|pull request)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/*.rs",
                    "**/Cargo.toml",
                    "**/Cargo.lock",
                    "src/**/*",
                    "mental-health-bar/**/*"
                ],
                "pathExclusions": [
                    "**/target/**",
                    "**/.cargo/**"
                ],
                "contentPatterns": [
                    "Result<",
                    "Option<",
                    "impl ",
                    "trait ",
                    "#\\[derive\\(",
                    "thiserror::",
                    "anyhow::",
                    "use std::",
                    "tokio::",
                    "async fn"
                ]
            }
        },
        "svelte-skill": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Svelte 5 development with runes and reactive state",
            "promptTriggers": {
                "keywords": [
                    "svelte",
                    "sveltekit",
                    ".svelte",
                    "runes",
                    "$state",
                    "$derived",
                    "$effect",
                    "$props",
                    "$bindable",
                    "$inspect",
                    "reactive state",
                    "component",
                    "svelte component"
                ],
                "intentPatterns": [
                    "(create|add|build|implement).*?svelte.*?component",
                    "(build|create|make).*?svelte.*?app",
                    "(add|implement|create).*?(reactive state|rune)",
                    "(how to|best practice).*?svelte",
                    "svelte.*?(animation|transition|store|context)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/*.svelte",
                    "**/*.svelte.js",
                    "**/*.svelte.ts",
                    "**/svelte.config.js",
                    "**/svelte.config.ts"
                ],
                "pathExclusions": [
                    "**/node_modules/**",
                    "**/.svelte-kit/**",
                    "**/build/**"
                ],
                "contentPatterns": [
                    "\\$state\\(",
                    "\\$derived\\(",
                    "\\$effect\\(",
                    "\\$props\\(",
                    "\\$bindable\\(",
                    "<script>",
                    "{#if",
                    "{#each",
                    "{#await"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        }
    }
}
